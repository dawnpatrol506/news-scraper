{{#each articles}}
<div class="row">
    <div class="col s12">
        <div class="card blue lighten-1">
            <div class="card-content">
                <span class="card-title"><strong>{{this.headline}}</strong></span>
                <p>{{this.summary}}</p>
            </div>
            <div class="card-action">
                <a class="white-text" href={{this.link}}>Link to Article</a>
                <button class="btn btn-medium red darken-1 delete" value={{this._id}}>Delete Article</button>
            </div>
        </div>
    </div>
</div>
{{/each}}
<script src="https://code.jquery.com/jquery-3.3.1.min.js" integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
    crossorigin="anonymous"></script>
<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
<script>
    $(document).ready(function () {
        $('.sidenav').sidenav();

        $(document).on('click', '.delete', function (event) {
            let id = $(this).val();
            axios.delete('/deleteSavedArticle', {
                data: {id}
            })
            .then(() => {
                location = '/savedarticles';
            })
        })
    })
</script>